<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">


    <servlet>
        <servlet-name>newPersonController</servlet-name>
        <servlet-class>controller.newPersonController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>newPersonController</servlet-name>
        <url-pattern>/newPerson/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ListPersonController</servlet-name>
        <servlet-class>controller.listPersonController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListPersonController</servlet-name>
        <url-pattern>/allPerson/</url-pattern>
    </servlet-mapping>
</web-app>
